<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:backgroundTint="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:layout_weight="1"
                android:backgroundTint="#A21B1B"
                android:onClick="redirectToCharacterDetails"
                android:text="Ver Personagem"
                android:textColor="#E09C09"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:layout_weight="1"
                android:backgroundTint="#2F751C"
                android:onClick="redirectToTeacherList"
                android:text="Listar Professores"
                android:textColor="#CCCCCC"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:layout_weight="1"
                android:backgroundTint="#1A3956"
                android:onClick="redirectToHouseList"
                android:text="Listar por casa"
                android:textColor="#AF6427"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/exitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_weight="0"
                android:backgroundTint="#FF9D0B"
                android:onClick="exit"
                android:text="Sair"
                android:textColor="#0D0D0D"
                app:cornerRadius="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>